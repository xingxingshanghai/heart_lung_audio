<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.example.bluetooth.feiyinrecord"
    android:versionCode="1"
    android:versionName="1.2" >
    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <!-- SDCard中创建与删除文件权限 -->
    <!--<uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>-->
    <!-- 向SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>
    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/stethoscope"
        android:theme="@android:style/Theme.Holo.Light">
        <activity android:name="com.example.bluetooth.feiyinrecord.MainInterface"
            android:label="信号采集">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.bluetooth.feiyinrecord.MainActivity"
            >
        </activity>
        <activity
            android:name="com.example.bluetooth.feiyinrecord.MainActivity_h"
            >
        </activity>
        <activity
            android:theme="@style/translucent"
            android:label="音频列表"
            android:name="com.example.bluetooth.feiyinrecord.MusicListActivity"
            >
        </activity>
        <service
            android:name="com.example.bluetooth.feiyinrecord.MusicServiceDemo"
            android:enabled="true" >
        </service>
        <service
            android:name="com.example.bluetooth.feiyinrecord.BluetoothLeService"
            android:enabled="true" >
        </service>
    </application>

</manifest>
